<div class="banner-show" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1421977870504-378093748ae6?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1050&q=80);">
  <div id="show-project" class="container">
    <div class="row">
      <div class="col-lg-3">
        <div class="card" id="mission-booking">
        <p class="green"><strong><%= @project.category%></strong></p>
        <h3><%= @project.name%></h3>
        <p>Association: <strong><%= @project.charity.name%></strong></p>
        <p><i class="fas fa-map-marker-alt"></i> <%= @project.address%></p>
        </div>
      </div>
      <div class="col-lg-5">
        <div class="card" id="mission-description">
          <%= @project.photo%>
          <h3>La mission</h3>
          <p><%= @project.description%></p>
        </div>
      </div>
      <div class="col-lg-4">
          <div class="card" id="mission-booking-btn">

          <h4>Dates</h4>
          <% @project.missions.each do |mission| %>
            <div class ="pick-date">
              <div class="date-display">
            <i class="fas fa-calendar-week"></i> Du: <strong><%= mission.start_time.strftime("%m/%d/%Y %k") %>h</strong> au: <strong><%= mission.end_time.strftime("%m/%d/%Y %k") %>h</strong>
            <% if mission.volunteers_count - mission.bookings.count == 1 %>
              <p>1 place restante</p>
            <% elsif mission.volunteers_count - mission.bookings.count < 1 %>
             <p style="text-align:center; color: red"><i class="far fa-times-circle red"></i> Plus de places disponibles</p>
            <% else %>
              <p><%= mission.volunteers_count - mission.bookings.count%> places restantes</p>
            <% end %>

            <% if mission.volunteers_count - mission.bookings.count > 0 %>
              </div>
              <% if mission.bookings.where(user_id: current_user.id).any? %>
                <p style="color:rgba(5, 64, 66, 0.8)"> <i class="fas fa-check green"></i>   <strong>Vous Ãªtes bien inscrit.e !</strong></p>
              <% else %>
                <div class = "button-display">
                  <%= link_to mission_bookings_path(mission), class: "cta add-booking", method: :post do %>
                      <span id="add-booking">Participer</span>
                      <svg width="13px" height="10px" viewBox="0 0 13 10">
                      <path d="M1,5 L11,5"></path>
                      <polyline points="8 1 12 5 8 9"></polyline>
                      </svg>
                  <% end %>
                </div>
              <% end %>
            <% end %>


            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<div id="more-info">
  <div class="container">
    <div class="row">
        <div class="col-lg-8">
          <div class="card" id="mission-more">
            <h3>Plus d'infos</h3>
            <p><%= @project.charity.description%></p>
          </div>
        </div>
    </div>
  </div>
</div>
