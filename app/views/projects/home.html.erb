<div
  class="banner"
  style="background-image: linear-gradient(rgba(0,0,0,0.2),rgba(0,0,0,0.1)), url(<%= image_path "people-to-people.jpg", height: "450px"%>);
    position: absolute;
    top: 0;
  ">
  <div class="container-bannertop">
    <h1> Don't watch, act!</h1>
    <button class="btn btn-primary" href="#">Choose your mission now</button>
  </div>
</div>

<div style="margin: 420px auto;">
  <div class="container-header">
    <div class="section-title">
      <h4 id="section-title"><i class="fas fa-arrow-circle-down"></i>Latest missions</h4>
    </div>

    <div class="container-search-bar">
        <%= form_tag(projects_path, method: "get") do %>
          <div class ="search-bar-index">
          <%= text_field_tag(:address,nil,class: "search-address") %>
          <%= select_tag(:category, options_for_select(Project::PROJECTCATEGORY)) %>
          <%= submit_tag "Search", class: "btn btn-primary" %>
          </div>
        <% end %>
    </div>
  </div>


  <div class="container-cards">
