<div style="margin: 20px" class="container-search-bar">
    <%= form_tag(projects_path, method: "get") do %>
      <div class ="search-bar-index">
      <%= text_field_tag(:address,nil,class: "search-address", placeholder: 'Paris') %>
      <%= select_tag(:category, options_for_select(Project::PROJECTCATEGORY)) %>
      <%= submit_tag "Trouver", class: "btn btn-primary" %>
      </div>
    <% end %>
</div>

<div style="display: flex;">

  <div
    style="margin: 20px"
    class="container-cards-2">
    <% @projects.each do |project| %>
      <div class="card" style="position: relative;">
        <div class="card-img-project" style="background-image: url(<%= project.photo %>)">
        </div>
        <div class="card-body">
          <h5 class="project-name"><strong><%= project.name %></strong></h5>
          <h3 class="charity-name"><%= project.charity.name %></h3>
          <p class="card-text"><i class="fas fa-map-marker-alt"></i><%= project.address %></p>
          <div style="position: absolute; bottom: 10px">
            <button class="btn btn-primary btn-sm">
              <%= link_to 'Plus de dÃ©tails', project_path(project) %>
            </button>
          </div>
        </div>
      </div>
    <%end%>
  </div>

  <div
    id="map"
    style="
      width: 40%;
      height: 600px;
      position: sticky;
      top: 0;
      margin-top: 20px;
    "
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
  ></div>
</div>




