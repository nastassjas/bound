<div class="container-cards">
  <% @projects.each do |project| %>
    <div class="card">
      <div class="card-img-project" style="background-image: url(https://diabetestimes.co.uk/wp-content/uploads/2015/09/refugee-1024x768.jpg)"></div>
      <div class="card-body">
        <h5 class="project-name"><strong><%= project.name %></strong></h5>
        <h3 class="charity-name"><%= project.charity.name %></h5>
        <p class="card-text"><i class="fas fa-map-marker-alt"></i><%= project.address %></p>
        <button class="btn btn-primary btn-sm">
          <%= link_to 'More details', project_path(project) %>
        </button>
      </div>
      <%end%>
</div>



