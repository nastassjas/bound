
<div style="margin: 20px" class="container-search-bar">
    <%= form_tag(projects_path, method: "get", class: 'address-form') do %>
      <div class ="search-bar-index">
      <%= text_field_tag(:address,nil,class: "search-address", placeholder: 'Où ?', value: params[:address]) %>
      </div>
      <div class="date-index">
        <%= text_field_tag :start_time, params[:start_time], id: "date-picker" %>
        <%= submit_tag 'Appliquer' %>
      </div>
      <div class="category-index">
        <%= select_tag(:category, options_for_select(Project::PROJECTCATEGORY, params[:category]), onchange: 'this.form.submit();') %>
      </div>
    <% end %>
    <div class="btn-group btn-group-toggle" data-toggle="buttons">
      <label class="btn btn-secondary active map-on">
        <input type="radio" name="options" id="option1" autocomplete="off" checked> On
      </label>
      <label class="btn btn-secondary map-off">
        <input type="radio" name="options" id="option2" autocomplete="off"> Off
      </label>
    </div>
</div>

<div style="display: flex;" id="main-container">

  <div
    style="margin: 20px"
    class="container-cards-2">
    <% if @projects.empty? %>
      <p>Aucune mission ne correspond à votre recherche.</p>
    <% end %>
    <% @projects.each do |project| %>
      <div class="card" style="position: relative;">
        <div class="card-img-project" style="background-image: url(<%= project.photo %>)">
        </div>
        <div class="card-body">
          <h5 class="project-name"><strong><%= project.name %></strong></h5>
          <h3 class="charity-name"><%= project.charity.name %></h3>
          <p class="card-text"><i class="fas fa-map-marker-alt"></i><%= project.address %></p>
          <% if params[:address].present? && !params[:address].empty? %>
            <p><%= project.distance %></p>
          <% end %>
          <div style="position: absolute; bottom: 10px">
            <button class="btn btn-primary btn-sm">
              <%= link_to 'Plus de détails', project_path(project) %>
            </button>
          </div>
        </div>
      </div>
    <%end%>
  </div>

  <div
    id="map"
    style="
      height: 600px;
      position: sticky;
      top: 0;
      margin-top: 20px;
    "
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
  ></div>
</div>




