<div class="container-cards-2 large">
  <%= render 'cards', projects: projects %>
</div>

<% if projects.empty? %>
  <div style="height: 600px;"></div>
<% else %>
  <div
    id="map"
    data-markers="<%= markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
  ></div>
<% end %>
