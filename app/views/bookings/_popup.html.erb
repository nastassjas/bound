<!-- Button trigger modal -->
<button type="button" class="d-none" data-toggle="modal" data-target="#exampleModal"  id="booking-popup-button-mission_<%= mission.id %>">
  Launch demo modal
</button>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">
          MERCI <%= current_user.first_name.capitalize %>! <i class="fas fa-heart"></i></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <% if current_user %>

          Rendez-vous le <strong><%= mission.start_time.strftime("%d/%m/%Y")%></strong>
           <p><i class="fas fa-map-marker-alt"></i><%= @project.address%>
        <% end %>
<center><a href="https://www.facebook.com/sharer/sharer.php?u=https://www.wearebound.fr/projects/<%= @project.id %>" target="_blank" rel="noopener">
    <img class="btn-fb" src="https://png2.kisspng.com/sh/0adc35b4514039ba8fc6e8cf8f27164c/L0KzQYi4UsE3N2U8TpGAYUO4RYOBhfE1O2I5TJCBM0O7QIi7UsE2OWQ5TKUEOEK5R4O8TwBvbz==/5a35528ea43144.6338074215134439826725.png" width="52px" height="52px" alt="">
</a></center>
      </div>
      <div class="modal-footer">
        <button class="btn btn-primary btn-sm">
          <%= link_to 'Mes inscriptions', user_path(current_user) %>
        </button>
        <button class="btn btn-primary btn-sm">
          <%= link_to 'Retour aux missions', projects_path %>
        </button>

        <!-- <button type="button" class="btn btn-secondary" data-dismiss="modal">Fermer</button> -->
      </div>
    </div>
  </div>
</div>
